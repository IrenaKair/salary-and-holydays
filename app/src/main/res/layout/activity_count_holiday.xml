<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_count_holiday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.robertkaczmarek.wynagrodzeniacalculator.CountHoliday">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/wyliczenieUrlopu"
        android:textSize="18dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/month"
        android:layout_below="@+id/wyliczenieUrlopu"
        android:layout_marginTop="10dp"
        android:text="@string/month"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              "
        android:layout_below="@+id/month"
        android:id="@+id/monthHoliday"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:background="@drawable/textfield"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/countMonthHol"
        android:layout_below="@+id/monthHoliday"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
       android:gravity="center"
        android:textSize="22dp"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/licz"
        android:text="Oblicz"
        android:onClick="countDayHoliday"
        android:layout_below="@+id/countMonthHol"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        style="@style/button"/>

</RelativeLayout>
